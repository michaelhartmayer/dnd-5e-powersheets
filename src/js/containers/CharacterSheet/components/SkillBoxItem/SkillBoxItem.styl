.skill-box-item
  border-bottom 1px dashed #cecece

  &__proficient
    width .7em
    height .7em
    border 1px solid black
    background white
    display inline-block
    border-radius 100%
    margin 5px 5px 0
    cursor pointer

    &__active
      background #333

  &__label
    display inline-block
    width 10em

  &__points
    display inline-block
    width 1.2em
    height 1.2em

  &__stat
    display none